generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WcagUser {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sites WcagSite[]

  @@map("wcag_users")
}

model WcagSite {
  id        String   @id @default(cuid())
  url       String
  name      String?
  userId    String?
  user      WcagUser?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  scans WcagScan[]

  @@index([userId])
  @@index([url])
  @@map("wcag_sites")
}

model WcagScan {
  id                 String   @id @default(cuid())
  siteId             String
  site               WcagSite     @relation(fields: [siteId], references: [id], onDelete: Cascade)
  url                String
  accessibilityScore Int
  criticalCount      Int      @default(0)
  seriousCount       Int      @default(0)
  moderateCount      Int      @default(0)
  minorCount         Int      @default(0)
  totalViolations    Int      @default(0)
  totalPasses        Int      @default(0)
  pageTitle          String?
  pageLanguage       String?
  scanVersion        String   @default("1.0")

  // WCAG Principle Breakdown (stored as JSON)
  wcagBreakdown      String?  @db.Text

  // Full violations data (stored as JSON)
  violations         String?  @db.Text
  passes             String?  @db.Text

  createdAt          DateTime @default(now())

  @@index([siteId])
  @@index([createdAt])
  @@map("wcag_scans")
}

model WcagLead {
  id           String   @id @default(cuid())
  email        String
  url          String
  scanId       String?
  source       String?  // "scan", "signup", "outreach"
  status       String   @default("new") // "new", "contacted", "converted", "unsubscribed"
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email])
  @@index([status])
  @@map("wcag_leads")
}
